<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.iter.codac.units</groupId>
    <artifactId>irio-v2-cpp</artifactId>
    <packaging>codac</packaging>
    <version>0.1</version>
    <name>CODAC Core System irio-v2-cpp module</name>
    <description>CODAC Core System irio-v2-cpp module</description>
    <url>http://www.iter.org/</url>
 
    <!-- project properties -->
    <properties>
        <unit.type>module</unit.type>
    </properties>

    <!-- parent pom.xml -->
    <parent>
        <groupId>org.iter.codac.units</groupId>
        <artifactId>maven-iter-settings</artifactId>
        <version>7.2.0</version>
    </parent>

    <!-- unit owner and developers -->
    <developers>
        <developer>
            <id>vcosta</id>
            <roles>
                <role>unit owner</role>
            </roles>
        </developer>
    </developers>

    <!-- configuration of how the project is built -->
    <build>
        <!-- default phase is compile -->
        <defaultGoal>compile</defaultGoal>
        <!-- this command is executed if you just write 'mvn' -->
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-iter-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <packaging>
                        <package name="bfp">
                            <include name="bfp" type="library" />
                        </package>
                        <package develof="bfp">
                        	<include type="file" source="main/c++/bfp/include" target="include/iriov2cpp/bfp" />
                        </package>
                        <package name="irio_v2_cpp">
                            <include name="irio_v2_cpp" type="library" />
                        </package>
                        <package develof="irio_v2_cpp">
                        	<include type="file" source="main/c++/irio_v2_cpp/include" target="include/iriov2cpp" />
                        </package>
                    </packaging>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
